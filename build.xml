	<project name="Bias" default="BuildAndExecuteJarPackage">
    <description>
    	Bias OpenSource Personal Information Manager Project
    </description>
	
	<!-- =================================
		  properties
		 ================================= -->
	<property name="libDir" value="lib"/>

    <!-- ================================= 
          target: ExecuteJarPackage              
         ================================= -->
    <target name="ExecuteJarPackage">
    	<exec command="java -jar build/bias.jar"/>
    </target>

    <!-- ================================= 
          target: BuildAndExecuteJarPackage              
         ================================= -->
    <target name="BuildAndExecuteJarPackage" depends="BuildJarPackage">
    	<exec command="java -jar build/bias.jar"/>
    </target>

    <!-- ================================= 
          target: BuildJarPackage              
         ================================= -->
    <target name="BuildJarPackage" depends="clean" description="Bias OpenSource Personal Information Manager Project">
        <jar basedir="./bin" destfile="build/bias.jar" includes="bias/**" index="true">
        	<fileset dir=".">
        		<!-- include default icons set -->
			    <include name="icons/**"/>
			</fileset>
        	<manifest>
        		<attribute name="Main-Class" value="bias.Bias"/>
        	</manifest>
        </jar>
    </target>

    <!-- ================================= 
          target: clean                      
         ================================= -->
    <target name="clean">
		<delete>
			<fileset dir="build">
	    		<include name="bias.jar"/>
			</fileset>
		</delete>
    </target>

</project>

