	<!-- ================================= 
          properties              
         ================================= -->
	<property file="build.properties" />

	<!-- ================================= 
          target: RunApp              
         ================================= -->
	<target name="RunApp">
		<exec dir="build" command="java -jar bias.jar" />
	</target>

	<!-- ================================= 
          target: BuildAndRunApp              
         ================================= -->
	<target name="BuildAndRunApp" depends="BuildApp,RunApp" />

	<!-- ================================= 
          target: BuildApp              
         ================================= -->
	<target name="BuildApp" description="Bias JAR">
		<delete>
			<fileset dir="build">
				<include name="bias.jar" />
				<include name="appcore.jar" />
			</fileset>
		</delete>
		<jar basedir="bin" destfile="build/bias.jar" includes="bias/Launcher** bias/Splash** bias/utils/FSUtils** bias/res/load.gif">
			<manifest>
				<attribute name="Main-Class" value="bias.Launcher" />
			</manifest>
		</jar>
		<jar basedir="bin" destfile="build/appcore.jar" includes="bias/*.* bias/annotation/** bias/core/** bias/online/** bias/event/** bias/extension/*.* bias/gui/** bias/laf/*.* bias/res/*.* bias/utils/** bias/transfer/**" excludes="bias/Launcher** bias/res/load.gif">
		</jar>
	</target>

